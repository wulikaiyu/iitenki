/**index.wxss**/
.temp{
  text-align: center;
  font-size: 200rpx;
  line-height:280rpx;
  opacity: 0.8;
}
.weather{
  text-align: center;
  font-size: 40rpx;
  line-height:56rpx;
  opacity: 0.6;
}
.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}
.weather-bg{
  position:absolute;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
/**时间样式**/
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
/**列表样式**/
.forecast-list{
  display: flex;
}
.forecast-item{
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 120rpx;
  align-items: center
}
.forecast-time{
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp{
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
/**气温值域样式**/
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}
.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}
.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

/**位置样式**/
.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42 rpx;
}
.location{
  display: flex;
  justify-content: center;
  align-items: center;
}
.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}
.location-text{
 opacity: 0.5;
}
.location-tips{
margin-top: 10rpx;
text-align: center;
height:42rpx;
opacity: 0.5;
}
.bottomTips{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.bottomTips-text{
  font-size:20rpx;
  line-height: 42rpx;
  opacity: 0.6;
}